@model AdminPanel.ComplainForm

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutUser.cshtml";

}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>HMS - contact</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="assets/img/apple-icon.png">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
    <!-- Load Require CSS -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font CSS -->
    <link href="~/Content/assets/css/boxicon.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Load Tempalte CSS -->
    <link href="~/Content/assets/css/templatemo.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
    <!--

    TemplateMo 561 Purple Buzz

    https://templatemo.com/tm-561-purple-buzz

    -->
</head>

<body>
    <!-- Header -->
    <!-- Close Header -->
    <!-- Start Contact -->
    <section class="container py-5">

        <h1 class="col-12 col-xl-8 h2 text-left text-primary pt-3">Complain Form</h1>
        <h2 class="col-12 col-xl-8 h4 text-left regular-400">Your Complain Here</h2>
        <p class="col-12 col-xl-8 text-left text-muted pb-5 light-300">
        </p>

        <div class="row pb-4">

            <!-- Start Contact Form -->
            <div class="col-lg-8 ">
                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                 


                        <div class="col-12">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div><!-- End Input Email -->

                        <div class="col-12">
                            @Html.LabelFor(model => model.RoomNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RoomNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RoomNo, "", new { @class = "text-danger" })
                            </div>
                        </div><!-- End Input Room No -->

                        <div class="col-12">
                            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                            </div>
                        </div><!-- End Input Subject -->

                        <div class="col-12">
                            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>
                        </div><!-- End Textarea Message -->

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                     
                }

                </div>

            <!-- End Contact Form -->
        </div>
    </section>
    <!-- End Contact -->
    <!-- Start Footer -->
    <!-- End Footer -->
    <!-- Bootstrap -->
    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
    <!-- Templatemo -->
    <script src="~/Content/assets/js/templatemo.js"></script>
    <!-- Custom -->
    <script src="~/Content/assets/js/custom.js"></script>

</body>

</html>



